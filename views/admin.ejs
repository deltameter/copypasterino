<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin Approval</title>

    <!-- Bootstrap -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.1/css/bootstrap.min.css" rel="stylesheet">
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
    <h1 id = "count">Count:</h1>
    <div class = "row" id = "submitpasta">
      <div class = "col-md-2 col-sm-1 col-xs-0"></div>
      <div class = "col-md-8 col-sm-10 col-xs-12">
        <textarea class="form-control" rows="5" id = "pastabox"></textarea>
        <textarea class="form-control" rows="1" id = "tagsbox"></textarea>
        <button type="button" class="btn btn-success" id = "approve">Approve</button>
        <button type="button" class="btn btn-danger" id = "reject">Reject</button>
        <button type="button" class="btn btn-default" id = "get">Get Pasta</button>
      </div>
    </div>
    <div class = "row" id = "updatepasta">
      <div class = "col-md-2 col-sm-1 col-xs-0"></div>
      <div class = "col-md-8 col-sm-10 col-xs-12">
        <textarea class="form-control" rows="5" id = "updatepastabox"></textarea>
        <textarea class="form-control" rows="1" id = "updatetagsbox"></textarea>
        <button type="button" class="btn btn-success" id = "updateapprove">Update</button>
        <form class="navbar-form" role="search">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search" name="srch-term" id="srch-term" maxlength = "1000">
            <div class="input-group-btn">
              <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            </div>
          </div>
        </form>
      </div>
    </div>
    <div class = "container" id = "servervars">
      <div class = "row" >
        <textarea class="form-control col-md-6 col-xs-6" rows="1" id = "alertMessage"></textarea>
        <button type="button" class="btn btn-success col-md-4 col-xs-4" id = "changeMessage">Change Message</button>
      </div>  
    </div>
    <div class = "container" id = "adcontrol">
      <div class = "row">
        <button type="button" class="btn btn-success" id = "newad">New Ad</button>
      </div>  
    </div>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.1/js/bootstrap.min.js"></script>
    <script src="javascripts/admin.js"></script>
  </body>
</html>